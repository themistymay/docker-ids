input {
  tcp {
    port => 5001
  }
  tcp {
    port => 5000
    codec => json
    type => "eve-json"
    add_field => ["engine", "suricata"]
  }
}

filter {

  if [type] == "eve-json" {
    date {
      match => [ "timestamp", "ISO8601" ]
    }
  }

  if [event_type] == "alert" {
    mutate {
      add_tag => ["inbox"]
    }
  }

  if [src_ip]  {
    geoip {
      source => "src_ip"
      target => "geoip"
      add_field => [ "[geoip][coordinates]", "%{[geoip][longitude]}" ]
      add_field => [ "[geoip][coordinates]", "%{[geoip][latitude]}"  ]
    }
    mutate {
      convert => [ "[geoip][coordinates]", "float" ]
    }
  }

}

output {
  stdout {
    codec => rubydebug
  }

  elasticsearch {
    host => elasticsearch
    protocol => http
  }
}
